{
  "extends": "@nuxt/typescript-edge",
  "compilerOptions": {
    "types": [
      "@types/node",
      "@nuxt/vue-app-edge"
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowJs": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "lib": [
      "es2017",
      "dom",
      "scripthost"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
