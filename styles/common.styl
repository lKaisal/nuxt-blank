@import './tools'

[v-cloak]
  display none !important

html
body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color black
  -webkit-tap-highlight-color rgba($cGold, .25)

::selection
  background-color $cGold
  color white

a
  color black
  text-decoration none

// ScrollObserver animation class
html:not(.is-ie) .js-soa
  transition-property transform, opacity
  transition-timing-function $googleTiming
  transition-duration 444ms
  transition-delay 66.6ms

html:not(.is-ie) .js-soa-start
  opacity 0
  transform translateY(25px)
